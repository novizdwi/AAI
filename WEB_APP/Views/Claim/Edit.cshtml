@model WEB_API.Models.EditClaimModel

@{
    ViewData["Title"] = "Claim - Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string msg = ViewBag.Message;
}

<h1>@ViewData["Title"]</h1>
@if (!string.IsNullOrEmpty(msg))
{
    <span class="text-danger mb-3">
        @Html.Raw(ViewBag.Message)
    </span>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post" role="form" class="form-horizontal">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="ClaimId" />

            <div class="form-group mt-1">
                <label asp-for="PatientName" class="control-label"></label>
                <input asp-for="PatientName" class="form-control" type="text" readonly />
                <span asp-validation-for="PatientName" class="text-danger"></span>
            </div>

            <div class="form-group mt-1">
                <label asp-for="DateOfService" class="control-label"></label>
                <input asp-for="DateOfService" class="form-control" type="datetime" readonly />
                <span asp-validation-for="DateOfService" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-1">
                <label asp-for="MedicalProvider" class="control-label"></label>
                <input asp-for="MedicalProvider" class="form-control" type="text" readonly />
                <span asp-validation-for="MedicalProvider" class="text-danger"></span>
            </div>

            <div class="form-group mt-1">
                <label asp-for="Diagnosis" class="control-label"></label>
                <input asp-for="Diagnosis" class="form-control" type="text" readonly />
                <span asp-validation-for="Diagnosis" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-1">
                <label asp-for="ClaimAmount" class="control-label"></label>
                <input asp-for="ClaimAmount" class="form-control" type="number" readonly />
                <span asp-validation-for="ClaimAmount" class="text-danger"></span>
            </div>

            <div class="form-group mt-1">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="Model.Statuses" class="form-control"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group mt-1">
                <input type="submit" value="Update" class="btn btn-primary" />
                <button type="button" class="btn btn-secondary" onclick="history.go(-1)">Cancel</button>
            </div>
        </form>
    </div>
</div>