@model WEB_API.Models.EditClaimModel
@{
    ViewData["Title"] = "Claim - New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="New" method="post" role="form" class="form-horizontal">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mt-1">
                <label asp-for="PatientName" class="control-label"></label>
                <input asp-for="PatientName" class="form-control" type="text"  />
                <span asp-validation-for="PatientName" class="text-danger"></span>
            </div>

            <div class="form-group mt-1">
                <label asp-for="DateOfService" class="control-label"></label>
                <input asp-for="DateOfService" data-val="false" class="form-control" autocomplete="off" asp-format="{0:dd/MM/yyyy}" />
                <span asp-validation-for="DateOfService" class="text-danger"></span>
            </div>

            <div class="form-group mt-1">
                <label asp-for="MedicalProvider" class="control-label"></label>
                <input asp-for="MedicalProvider" class="form-control" type="text"  />
                <span asp-validation-for="MedicalProvider" class="text-danger"></span>
            </div>

            <div class="form-group mt-1">
                <label asp-for="Diagnosis" class="control-label"></label>
                <input asp-for="Diagnosis" class="form-control" type="text"  />
                <span asp-validation-for="Diagnosis" class="text-danger"></span>
            </div>

            <div class="form-group mt-1">
                <label asp-for="ClaimAmount" class="control-label"></label>
                <input asp-for="ClaimAmount" class="form-control" type="number"  />
                <span asp-validation-for="ClaimAmount" class="text-danger"></span>
            </div>

            <div class="form-group mt-1">
                <input type="submit" value="Add" class="btn btn-primary" />
                <button type="button" class="btn btn-secondary" onclick="history.go(-1)">Cancel</button>
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.datetimepicker-input').datetimepicker({
            format: 'DD/MM/YYYY HH:mm:ss'
        }).on('dp.change', function (e) {
            console.log(e.date); // Check the date object passed here
        });
    });
</script>